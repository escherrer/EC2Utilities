<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="ServerStartEmail" type="EC2Utilities.Common.Config.ServerStartEmailConfigSection, EC2Utilities.Common"/>
    <section name="MessageForwardingInCaseOfFaultConfig" type="NServiceBus.Config.MessageForwardingInCaseOfFaultConfig, NServiceBus.Core" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  
  <MessageForwardingInCaseOfFaultConfig ErrorQueue="error" />

  <ServerStartEmail>
    <EmailAddresses>
      <add emailAddress="escherrer@gmail.com"/>
      <add emailAddress="mike@czarmetrics.com"/>
    </EmailAddresses>
  </ServerStartEmail>

  <appSettings>
    <add key="EmailAlertFromEmailAddress" value="mike@czarmetrics.com"/>
  </appSettings>

  <log4net debug="false">
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="ServiceBus.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="100KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="Green" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Yellow" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="TRACE"/>
      <appender-ref ref="RollingFileAppender"/>
      <appender-ref ref="ColoredConsoleAppender"/>
    </root>
  </log4net>

</configuration>