<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="BackupInstances" type="EC2Utilities.Config.BackupInstancesConfigSection, EC2Utilities.Common"/>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <appSettings>
    <add key="AWSAccessKey" value=""/>
    <add key="AWSSecretKey" value=""/>
    <add key="ServiceName" value="Ec2BackupService"/>
    <add key="BackupRetentionDays" value="2"/>
  </appSettings>
  <BackupInstances>
    <Instances>
      <add instance="i-test"/>
    </Instances>
  </BackupInstances>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="logfile" xsi:type="File" fileName="EC2Backup.log" layout="${longdate} ${message} ${exception:format=tostring}"/>
      <target xsi:type="ColoredConsole"
                  name="Debug"
                  layout="${message} ${exception:format=tostring}">
        <highlight-row backgroundColor="Black"
                       foregroundColor="DarkCyan"
                       condition="true"/>
      </target>
    </targets>
    <rules>
      <logger name="*" minlevel="Trace" writeTo="logfile" />
      <logger name="*" minlevel="Trace" writeTo="Debug" />
    </rules>
  </nlog>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
